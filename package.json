{
  "name": "@solariera/template-npm-package",
  "version": "0.0.3",
  "description": "This is npm package template",
  "author": "Solariera <always@solariera.com> (https://github.com/solariera)",
  "license": "MIT",
  "keywords": [
    "template",
    "npm",
    "package"
  ],
  "homepage": "https://github.com/solariera/template-npm-package#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solariera/template-npm-package.git"
  },
  "bugs": {
    "url": "https://github.com/solariera/template-npm-package/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "test:cov": "jest ---watch --coverage",
    "typesync": "typesync || :",
    "clean": "rm -rf lib/",
    "lint": "eslint src/**/*.ts",
    "ts-declaration": "tsc --declaration --outDir lib",
    "build": "yarn ts-declaration",
    "build:watch": "build --watch",
    "build:clean": "yarn clean && yarn ts-declaration ",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "@jest/types": "^27.0.6",
    "@solariera/easy-jest": "^0.0.9",
    "@types/eslint": "^7.2.13",
    "@types/jest": "^26.0.23",
    "@types/prettier": "^2.3.0",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.0.6",
    "jest-cli": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "typesync": "^0.8.0"
  }
}
